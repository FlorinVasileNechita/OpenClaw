<GameMenu>
    <MenuType>MenuType_IngameMenu</MenuType>
    <StartingPage>MenuPage_Main</StartingPage>
    <BackgroundImage>IngameMenuBackground</BackgroundImage>
    <BackgroundMusic></BackgroundMusic>
    <MenuEnterSound>/STATES/MENU/SOUNDS/SELECT.WAV</MenuEnterSound>
    
    <!-- MAIN (DEFAULT) PAGE -->
    <MenuPage>
        <PageName>MenuPage_Main</PageName>
        <KeyboardEvent>
            <KeyType>Escape</KeyType>
            <GeneratedEvent>
                <Type>ResumeGame</Type>
            </GeneratedEvent>
        </KeyboardEvent>
        <MenuItem>
            <Name>RESUME_GAME_BUTTON</Name>
            <Type>Button</Type>
            <Hotkey>R</Hotkey>
            <State>Active</State>
            <InactiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/001_RETURN.PID</InactiveImage>
            <ActiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/002_RETURN.PID</ActiveImage>
            <Position x="182" y="145" />
            <GeneratedEvent>
                <Type>ResumeGame</Type>
            </GeneratedEvent>
        </MenuItem>
        <MenuItem>
            <Name>END_LIFE_BUTTON</Name>
            <Type>Button</Type>
            <Hotkey>L</Hotkey>
            <State>Inactive</State>
            <InactiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/003_CLAWICIDE.PID</InactiveImage>
            <ActiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/004_CLAWICIDE.PID</ActiveImage>
            <Position x="234" y="180" />
            <GeneratedEvent>
                <Type>SwitchPage</Type>
                <PageName>MenuPage_EndLife</PageName>
            </GeneratedEvent>
        </MenuItem>
        <MenuItem>
            <Name>OPTIONS_BUTTON</Name>
            <Type>Button</Type>
