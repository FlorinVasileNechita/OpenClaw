        <BackgroundImage>/STATES/HELP/SCREENS/HELP.PCX</BackgroundImage>
        <KeyboardEvent>
            <KeyType>Escape</KeyType>
            <GeneratedEvent>
                <Type>SwitchPage</Type>
                <PageName>MenuPage_Main</PageName>
            </GeneratedEvent>
        </KeyboardEvent>
        <KeyboardEvent>
            <KeyType>Space</KeyType>
            <GeneratedEvent>
                <Type>SwitchPage</Type>
                <PageName>MenuPage_Main</PageName>
            </GeneratedEvent>
        </KeyboardEvent>
        <KeyboardEvent>
            <KeyType>Enter</KeyType>
            <GeneratedEvent>
