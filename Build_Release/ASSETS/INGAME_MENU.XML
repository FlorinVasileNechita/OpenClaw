                <PageName>MenuPage_SinglePlayer</PageName>
            </GeneratedEvent>
        </MenuItem>
        <MenuItem>
            <Name>HELP_BUTTON</Name>
            <Type>Button</Type>
            <Hotkey>H</Hotkey>
            <State>Inactive</State>
            <InactiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/007_HELP.PID</InactiveImage>
            <ActiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/008_HELP.PID</ActiveImage>
            <Position x="270" y="250" />
            <GeneratedEvent>
                <Type>SwitchPage</Type>
                <PageName>MenuPage_Help</PageName>
            </GeneratedEvent>
        </MenuItem>
        <MenuItem>
            <Name>END_GAME_BUTTON</Name>
            <Type>Button</Type>
            <Hotkey>E</Hotkey>
            <State>Inactive</State>
            <InactiveImage>/GAME/IMAGES/INGAMEMENU/MAIN/009_ENDGAME.PID</InactiveImage>
